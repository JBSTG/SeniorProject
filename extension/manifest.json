{
    "manifest_version": 2,
    "name": "ClickbaitDetector",
    "version": "1.0",
    "description": "Warns about manipulative title descriptions.",
    "icons": {
      "48": "icons/border-48.png"
    },
    "permissions":
      ["<all_urls>"]
    ,
    "background":{
      "scripts":["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["main.js"]
      }
    ],
    "applications": {
        "gecko": {
          "id": "borderify@example.com"
        }
      }
  }
