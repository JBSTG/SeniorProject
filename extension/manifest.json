{

    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",
  
    "description": "Adds a red border to all webpages matching mozilla.org.",
  
    "icons": {
      "48": "icons/border-48.png"
    },
    "permissions":
      ["<all_urls>"]
    ,
    "content_security_policy":"script-src 'self' *://cs.csub.edu/~jstaggs/*; object-src 'self'",
    "background":{
      "scripts":["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["main.js"]
      }
    ],
    "applications": {
        "gecko": {
          "id": "borderify@example.com"
        }
      }
  }